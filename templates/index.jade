doctype html
html(ng-app="myApp")
  head
    meta(charset='UTF-8')
    title Homefront | Dashboard
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    link(href='/css/bootstrap.css', rel='stylesheet', type='text/css')
    link(href='/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='/css/ionicons.min.css', rel='stylesheet', type='text/css')
    link(href='/css/homefront.css', rel='stylesheet', type='text/css')

  body.skin-blue
    // header logo: style can be found in header.less
    header.header
      a.logo(href='/')
        // Add the class icon to your logo image or logo icon to add the margining
        | Homefront
      // Header Navbar: style can be found in header.less
      nav.navbar.navbar-static-top(role='navigation')
        // Sidebar toggle button
        a.navbar-btn.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .navbar-right
          ul.nav.navbar-nav
            // Notifications: style can be found in dropdown.less
            li.dropdown.notifications-menu
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-warning
              ul.dropdown-menu
                li.header You have 0 notifications
                li.footer
                  a(href='#') View all
            // User Account: style can be found in dropdown.less
            li.dropdown.user.user-menu
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.glyphicon.glyphicon-user
                span
                  | admin
                  i.caret
              ul.dropdown-menu
                // User image
                li.user-header.bg-light-blue
                  p
                    | admin
                // Menu Footer
                li.user-footer
                  .pull-left
                    a.btn.btn-default.btn-flat(href='#') Profile
                  .pull-right
                    a.btn.btn-default.btn-flat(href='#') Sign out
    .wrapper.row-offcanvas.row-offcanvas-left
      // Left side column. contains the logo and sidebar
      aside.left-side.sidebar-offcanvas
        // sidebar: style can be found in sidebar.less
        section.sidebar
          // sidebar menu: : style can be found in sidebar.less
          ul.sidebar-menu
            li.active
              a(href='/')
                i.fa.fa-dashboard
                span Dashboard
            li.treeview
              a(href='#')
                i.fa.fa-bar-chart-o
                span Charts
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='/charts')
                    i.fa.fa-angle-double-right
                    | Charts
            li.treeview
              a(href='#')
                i.fa.fa-laptop
                span Administration
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='/sensoradmin')
                    i.fa.fa-angle-double-right
                    | Sensors
                  a(href='/groupadmin')
                    i.fa.fa-angle-double-right
                    | Probe groups
        // /.sidebar
      // Right side column. Contains the navbar and content of the page
      aside.right-side
        div(ng-view)
      // /.right-side
    // ./wrapper
    script(src='js/bundle.js')
    script(src='js/bootstrap.min.js', type='text/javascript')
    script(src='js/AdminLTE/app.js', type='text/javascript')
    script(src='js/flot/jquery.flot.js')
    script(src='js/flot/jquery.flot.resize.js')
    script(src='js/flot/jquery.flot.time.js')
    script(src='js/jquery.flot.tooltip.js')
    script(src='js/input-mask/jquery.inputmask.js')
    script(src='js/input-mask/jquery.inputmask.regex.extensions.js')
    script(src='js/ui-bootstrap-tpls.min.js')

